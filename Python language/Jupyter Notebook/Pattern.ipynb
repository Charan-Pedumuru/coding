   "source": [
    "# Decreasing left sided triangle\n",
    "\n",
    "n=int(input(\"Enter the size: \"))\n",
    "for i in range(n):\n",
    "    for j in range(i,n):\n",
    "        print('* ',end='')\n",
    "    print()\n",
    "print()\n",
    "i=1\n",
    "while i<=n:\n",
    "    j=i\n",
    "    while j<=n:\n",
    "        print('* ',end='')\n",
    "        j+=1\n",
    "    print()\n",
    "    i+=1"
   ]
